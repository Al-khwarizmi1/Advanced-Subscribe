<?xml version="1.0"?>
<config>
    <tabs>
        <Apptha translate="label" module="advsubscribe">
            <label>Apptha</label>
            <sort_order>105</sort_order>
        </Apptha>
    </tabs>
    <sections>
        <advsubscribe translate="label" module="advsubscribe">
            <tab>Apptha</tab>
            <label>Advanced Subscribe</label>
            <frontend_type>text</frontend_type>
            <sort_order>99</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="advsubscribe">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                     <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                     
					 <activate_apptha_adv_subscribe translate="label" >
                            <label>Enable Advance subscribe</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select yes for Enable this module</comment>
                        </activate_apptha_adv_subscribe>
                        
                                              
                    
                     </fields>
                </general>
                <advsubscribe_follow_popup_settings translate="label" module="advsubscribe">
                    <label>Follow Popup Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>101</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
	                     
	                     <advsubscribe_notify_message_to_signUP>
	                     		<label>Message for Notification</label>
	                            <frontend_type>Text</frontend_type>
	                            <validate>required-entry</validate>
	                            <sort_order>1</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>Get every new product delivered to your Inbox.</comment>
	                     </advsubscribe_notify_message_to_signUP>
	                     <advsubscribe_email_invalide_message>
	                     		<label>Invalide Email Id Error Message</label>
	                            <frontend_type>Text</frontend_type>
	                            <validate>required-entry</validate>
	                            <sort_order>2</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>Your subscription did not succeed, please try again with a valid email address.</comment>
	                     </advsubscribe_email_invalide_message>
	                     <advsubscribe_subscription_success>
	                     		<label>Subscription Succeed Message</label>
	                            <frontend_type>Text</frontend_type>
	                            <validate>required-entry</validate>
	                            <sort_order>3</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>We sent you a confirmation email.</comment>
	                      </advsubscribe_subscription_success>
	                      <advsubscribe_poweredby_mess>
	                     		<label>Powered by lable Message</label>
	                            <frontend_type>Text</frontend_type>
	                            <validate>required-entry</validate>
	                            <sort_order>4</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>powered by message</comment>
	                      </advsubscribe_poweredby_mess>
	                  </fields>
                  </advsubscribe_follow_popup_settings>   
                
                <advsubscribe_confirm_email_settings translate="label" module="advsubscribe">
                    <label>Confirm Email Template</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>102</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                 
                        <confirm_email_sender translate="label">
                            <label>Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </confirm_email_sender>
                        <confirm_email_template translate="label">
                            <label>Notify Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select the email template to be sent to users</comment>
                        </confirm_email_template>
                    </fields>
                </advsubscribe_confirm_email_settings>
                
                 <advsubscribe_addnewproduct_email_settings translate="label" module="advsubscribe">
                    <label>Add New Product Email Template</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>104</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                  
                        <product_email_sender translate="label">
                            <label>Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_email_sender>
                        <product_email_template translate="label">
                            <label>Notify Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select the email template to be sent to users</comment>
                        </product_email_template>
                    </fields>
                </advsubscribe_addnewproduct_email_settings>
                
                
                <advsubscribe_success_email_settings translate="label" module="advsubscribe">
                    <label>Subscriber Email Template</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>103</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                  
                        <success_email_sener translate="label">
                            <label>Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </success_email_sener>
                        
                        <success_email_template translate="label">
                            <label>Notify Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select the email template to be sent to users</comment>
                        </success_email_template>
                    </fields>
                </advsubscribe_success_email_settings>
 
            </groups>
        </advsubscribe>
    </sections>
</config>
